{
  "manifest_version": 3,
  "name": "DoodleQuest",
  "version": "1.0",
  "description": "Turns any webpage into a doodled adventure with Gemini Nano.",
  "web_accessible_resources": [
    {
      "resources": ["result.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Start your Doodle Quest!",
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}